#: import hex kivy.utils.get_color_from_hex


<BouttonGris@Button>:
    font_size: 25
    background_color: 0, 0, 0, 0
    canvas.before:
        Color: 
            rgba: hex("#2e2b2b") if self.state == "normal" else (0,.7,.7,1)
        Ellipse:
            pos: self.pos
            size: 60, 60

<BouttonBlanc@Button>:
    font_size: 25
    background_color: 0, 0, 0, 0
    color: hex("#000000")
    canvas.before:
        Color: 
            rgba: hex("#ffffff") if self.state == "normal" else (0,.7,.7,1)
        Ellipse:
            pos: self.pos
            size: 60, 60

<BouttonJaune@Button>:
    font_size: 25
    background_color: 0, 0, 0, 0
    canvas.before:
        Color: 
            rgba: hex("#ffad0e") if self.state == "normal" else (0,.7,.7,1)
        Ellipse:
            pos: self.pos
            size: 60, 60

<BouttonNull@Button>:
    font_size: 25
    background_color: 0, 0, 0, 0
    canvas.before:
        Color: 
            rgba: hex("#2e2b2b") if self.state == "normal" else (0,.7,.7,1)
        RoundedRectangle:
            pos: self.pos
            size: 120, 60
            radius: [dp(30)]


Calculatrice:
    id: calculatrice
    display: input
    orientation: 'vertical'

    GridLayout:
        cols: 1
        rows: 1
        # orientation: "horizontal"
        size_hint: 1, .3
        TextInput:
            id: input
            background_color: hex('#000000')
            foreground_color: hex("#ffffff") # couleur du text
            font_size: 30
    
    GridLayout:
        cols: 4
        # orientation: 'vertical'
        BouttonBlanc:
            text: 'C'
            on_press: calculatrice.initialiser(input.text)
        BouttonBlanc:
            text: '+/-'
            on_press: input.text += self.text
        BouttonBlanc:
            text: '%'
            on_press: input.text += self.text
        BouttonJaune:
            text: '/'
            on_press: input.text += self.text
        
        BouttonGris:
            text: '7'
            on_press: input.text += self.text
        BouttonGris:
            text: '8'
            on_press: input.text += self.text
        BouttonGris:
            text: '9'
            on_press: input.text += self.text
        BouttonJaune:
            text: '*'
            on_press: input.text += self.text
        
        BouttonGris:
            text: '4'
            on_press: input.text += self.text
        BouttonGris:
            text: '5'
            on_press: input.text += self.text
        BouttonGris:
            text: '6'
            on_press: input.text += self.text
        BouttonJaune:
            text: '-'
            on_press: input.text += self.text 
        
        BouttonGris:
            text: '1'
            on_press: input.text += self.text
        BouttonGris:
            text: '2'
            on_press: input.text += self.text
        BouttonGris:
            text: '3'
            on_press: input.text += self.text
        BouttonJaune:
            text: '+'
            on_press: input.text += self.text

        
        BouttonNull:
            text: '0'
            on_press: input.text += self.text
        Label:
            
        BouttonGris:
            text: '.'
            on_press: input.text += self.text
        BouttonJaune:
            text: '='
            on_press: calculatrice.calculer(input.text)
